---
import GithubLink from './GithubLink.astro'
import LinkedinLink from './LinkedinLink.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html class="bg-zinc-900" lang="en">
  <head>
    <style>
      @tailwind base;
      @tailwind components;
      @tailwind utilities;

      html,
      body {
        padding: 0;
        margin: 0;
        font-family: Roboto, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans,
          Droid Sans, Helvetica Neue, sans-serif;
      }

      @layer base {
        html {
          /* background: theme('colors.bgColor'); */
          @apply text-zinc-300;
        }
      }
    </style>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <meta
      name="description"
      content="Software developer, nerd, gamer. Gabriel is a curious person from Brazil, currently living in Germany. He loves helping organizations to build ambitious and well structured web projects. Sometimes, he also writes in the third person."
    />
    <meta name="twitter:image" content="https://gabrielduarte.dev/twitter.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@GabeDuarteM" />
    <meta property="og:title" content="Gabriel Duarte" />
    <meta
      property="og:description"
      content="Software developer, nerd, gamer. Gabriel is a curious person from Brazil, currently living in Germany. He loves helping organizations to build ambitious and well structured web projects. Sometimes, he also writes in the third person."
    />
    <meta name="og:image" content="https://gabrielduarte.dev/twitter.png" />
    <meta name="theme-color" content="#1b0843" />

    <title>{title}</title>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap"
      rel="preload"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto&display=swap"
      rel="stylesheet"
      rel="preload"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript>
      <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500&display=swap" rel="stylesheet" />
      <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
    </noscript>
    {
      import.meta.env.PUBLIC_UMAMI_WEBSITE_ID && (
        <script
          async
          defer
          data-website-id={import.meta.env.PUBLIC_UMAMI_WEBSITE_ID}
          src="https://tools.gdm.dev/espeon/u/cdn"
        />
      )
    }
    <script>
      import LogRocket from 'logrocket'

      const projectId = import.meta.env.PUBLIC_LOGROCKET_PROJECT_ID

      if (projectId) {
        LogRocket.init(projectId, {
          ingestServer: 'https://tools.gdm.dev/espeon/lr/data',
        })
      }
    </script>
  </head>
  <body class="h-screen relative w-screen max-w-screen-xl mx-auto min-h-[300px]">
    <div class="pointer-events-none absolute w-[100px] h-[100px] sm:w-[300px] sm:h-[300px]">
      <div class="absolute flex w-full">
        <div
          class="w-full border-t-8 border-r-8 sm:border-t-[20px] sm:border-r-[20px] border-t-zinc-300 border-r-zinc-900 rounded-l-3xl"
        >
        </div>
        <span class="flex gap-0.5 sm:hidden -ml-[1px] -mt-px">
          <div class="rotate-45 h-2.5 w-0.5 bg-zinc-300"></div>
          <div class="rotate-45 h-2.5 w-0.5 bg-zinc-300"></div>
        </span>
      </div>
      <div class="absolute flex flex-col h-full">
        <div
          class="h-full border-l-8 border-b-8 sm:border-l-[20px] sm:border-b-[20px] border-l-zinc-300 border-b-zinc-900 rounded-t-3xl"
        >
        </div>
        <span class="flex flex-col gap-0.5 sm:hidden -ml-px -mt-[1px]">
          <div class="-rotate-45 w-2.5 h-0.5 bg-zinc-300"></div>
          <div class="-rotate-45 w-2.5 h-0.5 bg-zinc-300"></div>
        </span>
      </div>
    </div>
    <header>
      <div class="p-8 sm:p-12 flex">
        <a href="/" class="text-3xl sm:text-4xl font-thin text-center font-['Montserrat']">
          G<span class="font-medium">D</span>
          <div class="border-b-zinc-300 border-b-2"></div>
        </a>
        <div class="ml-auto min-w-[30px]"></div>
        <div class="flex gap-6 mt-2">
          <GithubLink />
          <LinkedinLink />
        </div>
      </div>
    </header>
    <main></main>
    <div
      class="pointer-events-none rotate-180 hidden sm:block absolute bottom-0 right-0 w-[100px] h-[100px] sm:w-[300px] sm:h-[300px]"
    >
      <div class="absolute flex flex-col h-full">
        <div
          class="h-full border-l-8 border-b-8 sm:border-l-[20px] sm:border-b-[20px] border-l-zinc-300 border-b-zinc-900 rounded-t-3xl"
        >
        </div>
      </div>
      <div class="absolute flex w-full">
        <div
          class="w-full border-t-8 border-r-8 sm:border-t-[20px] sm:border-r-[20px] border-t-zinc-300 border-r-zinc-900 rounded-l-3xl"
        >
        </div>
      </div>
    </div>
  </body>
</html>
