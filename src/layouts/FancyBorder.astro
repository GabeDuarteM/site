---
export interface Props {
  place?: 'top' | 'bottom'
}

const { place = 'top' } = Astro.props
---

<div
  class={`${
    place === 'bottom' ? 'rotate-180 bottom-0 right-0 ' : ''
  }pointer-events-none absolute w-[100px] h-[100px] sm:w-[300px] sm:h-[300px]`}
>
  <div class="absolute flex w-full">
    <div
      class="w-full border-t-8 border-r-8 sm:border-t-[20px] sm:border-r-[20px] border-t-zinc-300 border-r-transparent rounded-l-3xl"
    >
    </div>
    <span class="flex gap-0.5 sm:hidden -ml-[1px] -mt-px">
      <div class="rotate-45 h-2.5 w-0.5 bg-zinc-300"></div>
      <div class="rotate-45 h-2.5 w-0.5 bg-zinc-300"></div>
    </span>
  </div>
  <div class="absolute flex flex-col h-full">
    <div
      class="h-full border-l-8 border-b-8 sm:border-l-[20px] sm:border-b-[20px] border-l-zinc-300 border-b-transparent rounded-t-3xl"
    >
    </div>
    {
      place === 'top' && (
        <span class="flex flex-col gap-0.5 sm:hidden -ml-px -mt-[1px]">
          <div class="-rotate-45 w-2.5 h-0.5 bg-zinc-300" />
          <div class="-rotate-45 w-2.5 h-0.5 bg-zinc-300" />
        </span>
      )
    }
  </div>
</div>
